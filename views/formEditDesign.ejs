<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <%- include('modules/link.ejs') %>
    <link rel="stylesheet" href="/stylesheets/formEditDesign.css">
  </head>
  <body>
    <%- include('modules/navbar.ejs') %>
    <main>
      <div class="container-xxl">
        <h2 class="text-center p-3 p-md-5">Edita tu diseño</h2>
        <div class="row justify-content-center">
          <div class="col-10 col-md-5 formulario p-5">
            <form action="/design/editDesign/<%= result.design_id %>/<%= result.designer_id %>" method="post">
              <div class="vuelta pb-1">
                <label>Nombre</label>
                <input value="<%= result.design_name %>" type="text" name="design_name">
              </div>
              <div class="vuelta pb-1">
                <label for="">Orientado a:</label>
                <input type="text" value="<%= result.orientation %>" name="orientation">
              </div>
              <div class="vuelta pb-1">
                <label for="">Tela</label>
                <input type="text" value="<%= result.clothing_fabric %>" name="clothing_fabric">
              </div>
              <div class="vuelta pb-1">
                <label for="">Prenda</label>
                <input type="text" value="<%= result.type_of_clothing %>" name="type_of_clothing">
              </div>
              <div class="vuelta pb-1">
                <label for="">Color</label>
                <input type="text" value="<%= result.color %>" name="color">
              </div>
              <div class="vuelta pb-4">
                <label for="">Descripción</label>
                <input type="text" value="<%= result.design_description %>" name="description">
              </div>
              <div class="text-center"><button>Aceptar</button></div>
            </form>
          </div>
        </div>
      </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js" integrity="sha384-YUe2LzesAfftltw+PEaao2tjU/QATaW/rOitAq67e0CT0Zi2VVRL0oC4+gAaeBKu" crossorigin="anonymous"></script>
  </body>
</html>
